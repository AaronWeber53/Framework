@model DojoManagmentSystem.Models.DisciplineEnrolledMember

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "DisciplineEnrolledMember", FormMethod.Post, new { id = "ModalForm" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Enrolled Member</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
