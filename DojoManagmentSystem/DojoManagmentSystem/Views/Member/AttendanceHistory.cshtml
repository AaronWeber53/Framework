@model DojoManagmentSystem.ViewModels.ListViewModel<DojoManagmentSystem.Models.AttendanceSheet>
@using DojoManagmentSystem.Infastructure.Extensions

<div class="card bg-light col-sm-12" id="pagingList" data-page="@Model.CurrentPage" data-sort="@Model.CurrentSort" data-search="@Model.CurrentSearch" data-baseurl="/Member/AttendanceList/@ViewBag.MemberId">
    <div class="card-header">
        <h4 class="float-left">Attendance History</h4>
    </div>
    <div class="card-body">
        <div class="table">
            <table class="table">

                <thead>
                    <tr>
                        <th scope="col">
                            <a data-sort="@ViewBag.DisciplineSortParm" class="sortbutton" href="">Discipline</a>
                        </th>
                        <th scope="col">
                            <a data-sort="@ViewBag.DateSortParm" class="sortbutton" href="">Date</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ObjectList)
                    {
                        <tr>
                            <td scope="row">
                                @Html.DisplayFor(modelItem => item.ClassSession.Discipline.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttendanceDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.GeneratePagingButtons(Model)
        </div>
    </div>
</div>

