@model IEnumerable<DojoManagmentSystem.Models.Payment>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Payment Receipt</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
</head>
<!--Coded with love by Mutiullah Samim-->
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                    <img src="~/images/logo.jpg" class="brand_logo2" alt="Logo" height="100">
            </div>
            <div class="col-6 h3 font-weight-bold" style="color:#2C3E50">
               <br /> Wisconsin Bodokai Martial Arts
            </div>
            <div class="col h5">
                Wisconsin Budokai, LLC
                3260 Church St
                Stevens Point, WI 54481
                (715) 869-KICK
            </div>
        </div>
        <hr />
    </div>

        <h3>Payment Receipt</h3>
        <div class="font-weight-bold float-left">Payment Date Range: @ViewBag.StartDate - @ViewBag.EndDate</div>
        <div class="font-weight-bold float-right">Printed On: @ViewBag.DateTime</div><br /><br />
        <div>
            <table class="table table-bordered table-condensed table-striped">
                <tr>
                    <th>
                        Date of Payment
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Member.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Member.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                    </tr>
                }
            </table>
            <div class="font-weight-bold text-right h5 ">Total:$@ViewBag.Total</div>
        </div>
</body>
</html>
