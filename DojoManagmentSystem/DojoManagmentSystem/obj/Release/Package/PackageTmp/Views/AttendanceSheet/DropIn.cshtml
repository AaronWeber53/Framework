@model IEnumerable<DojoManagmentSystem.Models.Member>

@using (Html.BeginForm("DropIn", "AttendanceSheet", FormMethod.Post, new { id = "ModalForm" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <input type="hidden" id="DropInList" name="DropInList" value="@ViewBag.DropInList">
    <input type="hidden" id="ClassSessionId" name="ClassSessionId" value="@ViewBag.ClassSessionId">
    <input type="hidden" id="Date" name="Date" value="@ViewBag.Date">

    <div class="form-group">
        <label class="control-label col-md-8">Select Drop in Student</label>
        <div class="col-md-10">
            <select name="DropDown">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.FullName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submitButton" value="Add" class="btn btn-primary" />
            <button type="button" class="btn btn-primary float-right" data-dismiss="modal"><span aria-hidden="true">Cancel</span></button>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
